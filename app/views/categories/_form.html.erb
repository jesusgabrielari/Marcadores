<%= form_with(model: @category, remote: true) do |f| %>
    <% if @category.errors.any? %>
        <div id = 'error_explanation'>
            <h2 class= "text-danger font-weight-bold">Atenci√≥n! Existe <%= pluralize(category.errors.count, "error") %> el cual no permite guardar la Categoria</h2>
            <ul>
                <% @category.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <h3>Ingrese su Categoria</h3>
    
    <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :name, autofocus: true, placeholder: 'Escriba el nombre de su Categoria', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :estado %>
        <%= f.select :status, [:publico, :privado], {}, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :categoria %>
        <br>
        <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true%>
    </div>

    <div class = 'actions'>
        <%= f.submit "Guardar Categoria", class:'btn btn-success border-dark mb-2'%>
    </div>
    <button class="btn btn-danger btn-md active"><%= link_to 'Volver al Inicio', root_path, class:'text-white'%></button>

<% end %>