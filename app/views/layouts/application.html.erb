<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <p class="font-weight-bold text-dark alert-light pl-2 mt-2" ><%= notice %></p>
      <p class="font-weight-bold text-dark alert-light pl-2 mt-2" ><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
