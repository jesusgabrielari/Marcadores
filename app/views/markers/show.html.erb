<h3 class="category-title text-center">Listado de Marcadores</h3>

<table class="table table-striped">
    <thead id="tabla">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody id="markers">
        <% @markers.each do |m| %>
            <tr>
                <td><%= m.id %></td>
                <td><%= m.name %></td>
                <td><%= link_to 'Editar', edit_marker_path(m) %></td>
                <td><%= link_to 'Eliminar', marker_path(m), method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar el Marcador?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<button class="btn btn-danger btn-md active"><%= link_to 'Volver al Inicio', root_path, class:'text-white'%></button>